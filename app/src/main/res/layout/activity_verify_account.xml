<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.BoBo.Material3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        >

        <LinearLayout
            android:id="@+id/back_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/tx_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tx_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/logo2"
            android:contentDescription="Logo"/>
    </RelativeLayout>


    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Verify your new account"
        android:textColor="@color/title_onboarding"
        android:textSize="33dp" />
    <TextView
        android:id="@+id/description_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_light"
        android:text="Enter the verification code send to your email sample@gmail.com"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/olive_gray"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/code_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code1"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code2"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code3"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code4"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code5"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="1dp"
            app:cursorColor="@color/green"
            android:contentDescription="enter code">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code6"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:fontFamily="@font/poppins_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't received the code?"
            android:textSize="16dp"
            android:textColor="@color/olive_gray"/>
        <TextView
            android:layout_marginStart="1dp"
            android:id="@+id/resend_time"
            android:fontFamily="@font/poppins_light"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:text="00:00"
            android:textSize="16dp"
            android:textColor="@color/olive_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            >

            <TextView
                android:id="@+id/resend_text_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="top"
                android:text="Resend"
                android:textColor="@color/resend"
                android:textSize="17dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/resend_line_View"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line_disable"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_button_disable"
        android:fontFamily="@font/poppins_medium"
        android:stateListAnimator="@null"
        android:text="Continue"
        android:textColor="@color/light_gray"
        android:textFontWeight="700"
        android:textSize="16dp"
        android:clickable="false"
        android:focusable="false"/>
</LinearLayout>
