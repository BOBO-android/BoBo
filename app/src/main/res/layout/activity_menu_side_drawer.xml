<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_icon"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:contentDescription="Close" />

        <ImageView
            android:id="@+id/tx_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/logo2"
            android:contentDescription="Logo"/>
    </LinearLayout>

    <!-- User Info -->
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#FFFFFF">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/test_image"
            android:layout_marginEnd="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Jones"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="daniel.jones@example.com"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/premium_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/olive_gray"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:drawableStart="@drawable/ic_start"
                android:background="@drawable/rounded_border"
                android:drawablePadding="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/menu_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:text="General"
        android:textColor="@color/olive_gray"
        android:textSize="18dp"
        android:fontFamily=""
        android:textFontWeight="500"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <LinearLayout
        android:id="@+id/menu_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_my_account"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_menu_side_drawer"
            android:clickable="false"
            android:drawableStart="@drawable/ic_profile"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:stateListAnimator="@null"
            android:text="My Account"
            android:textColor="#363A33"
            android:textFontWeight="500"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_register_store"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_menu_side_drawer"
            android:clickable="false"
            android:drawableStart="@drawable/ic_register"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:stateListAnimator="@null"
            android:text="Register For Store"
            android:textColor="#363A33"
            android:textFontWeight="500"
            android:textSize="16dp" />

        <Button
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_menu_side_drawer"
            android:clickable="false"
            android:drawableStart="@drawable/ic_payment"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:stateListAnimator="@null"
            android:text="Payment"
            android:textColor="#363A33"
            android:textFontWeight="500"
            android:textSize="16dp" />


        <Button
            android:id="@+id/btn_setting"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_menu_side_drawer"
            android:clickable="false"
            android:drawableStart="@drawable/ic_settings"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:stateListAnimator="@null"
            android:text="Settings"
            android:textColor="#363A33"
            android:textFontWeight="500"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>